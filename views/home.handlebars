<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"></link>

    <title>Simple Twitter Streams</title>
  </head>
  <body>
    <h2>My Tweeter Live Feeds</h2>
    <p>
    <div id="tweet-container">
    </div>
  </body>
  <script type="text/javascript">

    const socket = io("http://localhost:4000");

    socket.on('connection', function() {
      console.log('Connected!');
    });
    socket.on('tweets', function(tweet){
      console.log(tweet);
      const html = '<div class="row"><div class="container"><img class="avater pull-left" style="padding:10px" src="'+tweet.user.profile_image_url+'"><h5>@'+tweet.user.screen_name+'</h5><span>'+tweet.text+'<span></div></div><hr/>';
      $("#tweet-container").prepend(html);
    })
  </script>
</html>
